<div class="breadcrumbs row-fluid">
	<div class="desc">
		求人広告作成から掲載までの3ステップ
	</div>

	<div class="item <%= 'active' if current_page?(controller: 'jobs', action: 'new') || current_page?(controller: 'jobs', action: 'edit') %>">
		<%= link_to_unless_current "1. 求人広告作成", edit_job_path(id: params[:id], token:params[:token]) %>
	</div>
	<div class="item <%= 'active' if current_page?(controller: 'jobs', action: 'review') %>">
		<% if current_page?(controller: 'jobs', action: 'new') || current_page?(controller: 'jobs', action: 'review') %>
			2. 求人広告内容の確認
		<% else %>
			<%= link_to "2.求人広告内容の確認", review_job_path(id: params[:id], token: params[:token]) %>
		<% end %>
	</div>


	<% if current_page?(controller: 'orders', action: 'new') %>
		<div class="item active">
			3. お支払と掲載
		</div>
	<% elsif @job.redemption.present? %>
		<div class="item">
			<%= link_to "3. お支払と掲載", new_order_path(id: @job.id, token: @job.token) %>
		</div>
	<% else %>
		<div class="item">
			3. お支払と掲載
		</div>
	<% end %>
	
</div><br>
